<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PhotoUnit" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/LightPrimaryLightColor</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryLightColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Стиль TextView которая отображает название сервиса -->
    <style name="Theme.PhotoUnit.TaskRecyclerItem.AccentTitle" parent="Theme.PhotoUnit">
        <item name="android:textColor">@color/LightSecondaryDarkThemeColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <!-- Стиль имен полей одной заявки в списке заявок -->
    <style name="Theme.PhotoUnit.TaskRecyclerItem.AccentText" parent="Theme.PhotoUnit">
        <item name="android:textColor">@color/secondaryLightColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="Theme.PhotoUnit.AuthText" parent="Theme.PhotoUnit">
        <item name="android:textColor">@color/LightSecondaryDarkThemeColor</item>
    </style>

    <!-- Цвет текста для надписей в HeaderLayout -->
    <style name="Theme.PhotoUnit.HeaderText" parent="Theme.PhotoUnit">
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Стиль для заполняемых полей в Task RecyclerView -->
    <style name="Theme.PhotoUnit.TaskRecyclerItem.DataTextView" parent="Theme.PhotoUnit">
        <item name="android:text">@string/text_pass</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_small</item>
    </style>

    <!-- Стиль для TextView в ClientCardFragment-->
    <style name="Theme.PhotoUnit.ClientCard.TextView" parent="Theme.PhotoUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_16sp</item>
        <item name="android:layout_marginStart">@dimen/margin_normal</item>
        <item name="android:layout_marginTop">@dimen/margin_12dp</item>
        <item name="android:textColor">@color/secondaryLightColor</item>
    </style>

    <!-- Стиль для TextViewValue в ClientCardFragment-->
    <style name="Theme.PhotoUnit.ClientCard.TextViewValue" parent="Theme.PhotoUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_text_16sp</item>
    </style>



</resources>