<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/closeTaskItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_type_service_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Интернет"
        android:textColor="@color/teal_200"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_address_task_text_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Адрес:"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_type_service_close"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_service_close" />

    <TextView
        android:id="@+id/tv_address_task_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="-------"
        app:layout_constraintStart_toEndOf="@+id/tv_address_task_text_close"
        app:layout_constraintTop_toTopOf="@+id/tv_address_task_text_close" />

    <TextView
        android:id="@+id/tv_is_money_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="-------"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_type_service_close" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/subItemContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_address_task_text_close">

        <TextView
            android:id="@+id/tv_comment_text_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Комментарий:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/date_of_completion_text_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Дата выполнения:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_comment_text_close"
            app:layout_constraintTop_toBottomOf="@+id/tv_comment_text_close" />

        <TextView
            android:id="@+id/tv_time_completion_text_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Рекомендуемое время:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/date_of_completion_text_close"
            app:layout_constraintTop_toBottomOf="@+id/date_of_completion_text_close" />

        <TextView
            android:id="@+id/tv_phone_text_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Телефон:"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_time_completion_text_close"
            app:layout_constraintTop_toBottomOf="@+id/tv_time_completion_text_close" />



        <TextView
            android:id="@+id/tv_phone_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="--------"
            app:layout_constraintStart_toEndOf="@+id/tv_phone_text_close"
            app:layout_constraintTop_toTopOf="@+id/tv_phone_text_close" />

        <TextView
            android:id="@+id/tv_time_completion_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="-------"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_time_completion_text_close"
            app:layout_constraintTop_toTopOf="@+id/tv_time_completion_text_close" />

        <TextView
            android:id="@+id/date_of_completion_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="-------"
            app:layout_constraintStart_toEndOf="@+id/date_of_completion_text_close"
            app:layout_constraintTop_toTopOf="@+id/date_of_completion_text_close" />


        <TextView
            android:id="@+id/tv_comment_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:text="------"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tv_comment_text_close"
            app:layout_constraintTop_toTopOf="@+id/tv_comment_text_close" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subItemContainer" />
</androidx.constraintlayout.widget.ConstraintLayout>